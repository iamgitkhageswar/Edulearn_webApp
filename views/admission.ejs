<%- include('partials/header') %>

<section class="admission-form container">
  <h2 class="form-title">College Admission Form</h2>

  <% if (typeof success !== 'undefined' && success) { %>
    <div class="alert alert-success">
      ðŸŽ‰ Your application has been submitted successfully!
    </div>
    <script>
      setTimeout(() => {
        document.querySelector('.alert').style.display = 'none';
      }, 3000); // auto hide after 3 seconds
    </script>
  <% } %>

  <form action="/admission" method="POST" class="form-grid">
    <!-- Personal Information -->
    <div class="form-section">
      <h3>Personal Information</h3>
      <input type="text" name="fullName" placeholder="Full Name" required />
      <input type="date" name="dob" placeholder="Date of Birth" required />
      <select name="gender" required>
        <option value="">Select Gender</option>
        <option value="Male">Male</option>
        <option value="Female">Female</option>
        <option value="Other">Other</option>
      </select>
    </div>

    <!-- Contact Details -->
    <div class="form-section">
      <h3>Contact Details</h3>
      <input type="email" name="email" placeholder="Email Address" required />
      <input type="tel" name="phone" placeholder="Phone Number" required />
      <input type="text" name="address" placeholder="Full Address" required />
    </div>

    <!-- Academic Information -->
    <div class="form-section">
      <h3>Academic Information</h3>
      <input type="text" name="highSchool" placeholder="High School Name" required />
      <input type="text" name="grade" placeholder="Percentage / CGPA" required />
      <select name="course" required>
        <option value="">Select Course</option>
        <option value="B.Tech">B.Tech</option>
        <option value="B.Sc">B.Sc</option>
        <option value="B.A">B.A</option>
        <option value="B.Com">B.Com</option>
      </select>
    </div>

    <!-- Declaration -->
    <div class="form-section">
      <label>
        <input type="checkbox" name="declaration" required />
        I confirm that the information provided above is true.
      </label>
    </div>

    <!-- Submit -->
    <div class="form-section">
      <button type="submit" class="btn">Submit Application</button>
    </div>
  </form>
</section>

<%- include('partials/footer') %>
